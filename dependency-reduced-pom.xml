<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>demoMod-parent</artifactId>
    <groupId>demoMod</groupId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../demoMod-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>demoMod</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>**/*.psd</exclude>
          <exclude>DemoImages/cards/cardToCut</exclude>
          <exclude>DemoImages/monsters/Texture2D</exclude>
        </excludes>
      </resource>
      <resource>
        <targetPath>${basedir}/../lib/gdx-video</targetPath>
        <directory>src/main/resources</directory>
        <includes>
          <include>gdx-video-1.3.2-SNAPSHOT.jar</include>
          <include>gdx-video-desktop-1.3.2-SNAPSHOT.jar</include>
          <include>gdx-video-platform-1.3.2-SNAPSHOT-natives-desktop.jar</include>
        </includes>
      </resource>
    </resources>
    <finalName>demoMod</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <encoding>utf-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <copy />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
