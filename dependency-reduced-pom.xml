      <groupId>com.megacrit.cardcrawl</groupId>
      <artifactId>slaythespire</artifactId>
      <version>051</version>
      <scope>system</scope>
      <systemPath>D:\IdeaProjects\STSGuardianMod\demoMod/../lib/desktop-1.0.jar</systemPath>
    </dependency>
